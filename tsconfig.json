{
  "include": ["src/**/*", "integrationTests/*"],
  "compilerOptions": {
    "lib": ["es2020"],
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noEmit": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true
  }
}

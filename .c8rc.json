{
  "all": true,
  "include": ["src/"],
  "exclude": [
    "src/**/index.ts",
    "src/**/*-fuzz.ts",
    "src/**/__benchmarks__/*.ts",
    "src/jsutils/Maybe.ts",
    "src/jsutils/ObjMap.ts",
    "src/jsutils/PromiseOrValue.ts",
    "src/utilities/typedQueryDocumentNode.ts"
  ],
  "clean": true,
  "report-dir": "reports/coverage",
  "skip-full": true,
  "reporter": ["html", "text"],
  "check-coverage": true,
  "branches": 100,
  "lines": 100,
  "functions": 100,
  "statements": 100
}
